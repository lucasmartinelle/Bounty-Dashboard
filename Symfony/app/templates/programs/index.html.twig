                        <div class="form-row selectformrow justify-content-center">
                            <div class="col-md-10 mb-3 mt-2">
                                <!-- If status valid -->
                                {% if AddProgramForm.status.vars.valid %}
                                    {{ form_widget(AddProgramForm.status, {
                                        'attr': {
                                            'class': 'form-control'}
                                        }) }}
                                <!-- If status invalid-->
                                {% else %}
                                    {{ form_widget(AddProgramForm.status, {
                                        'attr': {
                                            'class': 'form-control invalid'}
                                        }) }}
                                    {% if not AddProgramForm.status.vars.valid %}
                                        <span>
                                            <i class="fas fa-info-circle text-danger" tabindex="0" data-html=true data-toggle="popover" data-trigger="hover" title="<span class='text-danger' style='font-size: 18px; font-weight: 500;'>{{ 'Incorrect value'|trans }}</span>" data-content="{{ form_errors(AddProgramForm.status) }}"></i>
                                        </span>

                        <div class="form-row justify-content-center">
                            <div class="col-md-10 mb-3 mt-2">
                                <!-- If name valid -->
                                {% if AddProgramForm.name.vars.valid %}
                                    {{ form_widget(AddProgramForm.name, {
                                        'attr': {
                                            'class': 'form-control', 
                                            'placeholder' : 'Name'|trans}
                                        }) }}
                                <!-- If name invalid-->
                                {% else %}
                                    {{ form_widget(AddProgramForm.name, {
                                        'attr': {
                                            'class': 'form-control invalid', 
                                            'placeholder' : 'Name'|trans}
                                        }) }}
                                    {% if not AddProgramForm.name.vars.valid %}
                                        <span>
                                            <i class="fas fa-info-circle text-danger" tabindex="0" data-html=true data-toggle="popover" data-trigger="hover" title="<span class='text-danger' style='font-size: 18px; font-weight: 500;'>{{ 'Incorrect value'|trans }}</span>" data-content="{{ form_errors(AddProgramForm.name) }}"></i>
                                        </span>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-row addformrow justify-content-center">
                            <div class="col-md-10 mb-3 mt-2">

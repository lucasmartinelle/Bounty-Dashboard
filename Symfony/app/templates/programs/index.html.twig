                        <p class="text-muted text-center">{{ 'The buttons to the right of scope and tags allow the addition of the value. Remember to click on them to add your value.'|trans }}</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'Close'|trans }}</button>
                        <button type="submit" class="btn btn-primary">{{ 'Confirm'|trans }}</button>
                    </div>
                {{ form_end(AddProgramForm) }}
            </div>
        </div>

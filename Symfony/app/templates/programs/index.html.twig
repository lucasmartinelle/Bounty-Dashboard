                            <th>{{ 'Number of bugs found'|trans }}</th>
                            <th>{{ 'Gain'|trans }}</th>
                            <th>{{ 'Scopes number'|trans }}</th>
                            <th>{{ 'Status'|trans }}</th>
                            <th>{{ 'Tags'|trans }}</th>
                            <th>{{ 'Platform'|trans }}</th>
                            <th>{{ 'Action'|trans }}</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>{{ 'Name'|trans }}</th>
                            <th>{{ 'Number of bugs found'|trans }}</th>
                            <th>{{ 'Gain'|trans }}</th>
                            <th>{{ 'Scopes number'|trans }}</th>
                            <th>{{ 'Status'|trans }}</th>
                            <th>{{ 'Tags'|trans }}</th>
                            <th>{{ 'Platform'|trans }}</th>
                            <th>{{ 'Action'|trans }}</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {% set infosindex = 0 %}
                        {% for program in programs %}
                            {% set tags = '' %}
                            {% set money = (app.user.lang == 'en') ? '$' : '€' %}
                            {% for tag in program.tags|split("|") %}
                                {% if tag != '' %}
                                    {% set tags = tags ~ '<span class="badge badge-pill badge-warning m-r-sm">' ~ tag ~ '</span>' %}
                                {% endif %}    
                            {% endfor %}
                            {% set statusTrans = {"Open": "Open"|trans, "Close": "Close"|trans} %}
                            <tr>
                                <td class="text-center"><span class="badge badge-pill badge-danger">{{ program.name }}</span></td>
                                <td class="text-center"><span class="badge badge-pill badge-success">{{ infos[infosindex].numberofbugs }}</span></td>
                                <td class="text-center"><span class="badge badge-pill badge-success">{{ infos[infosindex].gaintotal }} {{ money }}</span></td>
                                <td class="text-center"><span class="badge badge-pill badge-success">{{ infos[infosindex].scopenumber }}</span></td>
                                <td class="text-center" data-toggle="modal" data-target="#updateStatus" data-id="{{ program.id }}"><span class="badge badge-pill badge-info">{{ statusTrans[program.status] }}</span></td>
                                <td class="text-center">{{ tags|raw }}</td>
                                <td class="text-center"><span class="badge badge-pill badge-danger">{{ infos[infosindex].platform }}</span></td>
                                <td class="text-center">
                                    <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" style="color: #3a3b45 !important;" data-toggle="modal" data-id="{{ program.id }}" data-target="#updateProgram">{{ 'Edit'|trans }}</a>
                                        <a class="dropdown-item" style="color: #3a3b45 !important;" data-toggle="modal" data-url="{{ path('delete-program', {'id': program.id})}}" data-target="#confirmDelete" id="deleteProgram">{{ 'Delete'|trans }}</a>
                                        <a class="dropdown-item" href="{{ path('notes-program', {'id': program.id})}}">{{ 'Notes'|trans }}</a>
                                    </div>
                                </td>
                            </tr>
                            {% set infosindex = infosindex + 1 %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal change status -->
    <div class="modal fade" id="updateStatus" tabindex="-1" role="dialog" aria-labelledby="#updateStatusLabel" aria-hidden="true">

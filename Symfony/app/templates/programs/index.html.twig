    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js" integrity="sha256-T0Vest3yCU7pafRw9r+settMBX6JkKN06dqBnpQ8d30=" 
    crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <script src="/dist/datepicker.js"></script>
    {% set values = '' %}
    {% set keys = '' %}
    {% for key, value in severityChart %}
        {% set keys = keys ~ "'" ~ key ~ "'," %}
        {% set values = values ~ "'" ~ value ~ "'," %}
    {% endfor %}
    {% set values = values[:-1] %}
    {% set keys = keys[:-1] %}

    <script type="text/javascript">
        $( document ).ready(function() {
            Chart.defaults.global.defaultFontFamily = 'Nunito', '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
            Chart.defaults.global.defaultFontColor = '#858796';

            // Pie Chart Example
            var ctx = document.getElementById("bugBySeverity");
            var bugBySeverity = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: [{{ keys|raw }}],
                    datasets: [{
                        data: [{{ values|raw }}],
                        backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#a4f542', '#ed3245', '#edbb45', '#a064fa' , '#45f1f7'],
                        hoverBackgroundColor: ['#2e59d9', '#17a673', '#2c9faf', '#95de3c', '#bd2232', '#d4a944', '#8f48fa', '#3dcfd4'],
                        hoverBorderColor: "rgba(234, 236, 244, 1)",
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    tooltips: {
                    backgroundColor: "rgb(255,255,255)",
                    bodyFontColor: "#858796",
                    borderColor: '#dddfeb',
                    borderWidth: 1,
                    xPadding: 15,
                    yPadding: 15,
                    displayColors: false,
                    caretPadding: 10,
                    },
                    legend: {
                        display: true,
                        position: 'bottom',
                    },
                    cutoutPercentage: 80,
                },
            });

            $('[data-toggle="popover"]').popover();

            // enable data table
            {% if app.user.lang == 'en' %}
                $('#dataTable').DataTable();
            {% else %}
                $('#dataTable').DataTable( {
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                    }
                });
            {% endif %}

            // update link for delete report
            $('#confirmDelete').on('shown.bs.modal', function (e) {
                var button = $(e.relatedTarget);
                var url = button.data('url');
                var modal = $(this)
                modal.find('#deleteProgramLink').attr('href', url)
            });

            $('#updateStatus').on('shown.bs.modal', function (e) {
                var button = $(e.relatedTarget);
                var id = button.data('id');
                var modal = $(this)
                modal.find('#update_status_programs_id').val(id)
            });

            $('#updateProgram').on('shown.bs.modal', function (e) {
                var button = $(e.relatedTarget);
                var id = button.data('id');
                var modal = $(this)
                modal.find('#update_program_programs_programId').val(id)
            });

            // update hidden field for scope
            var scope = $("#add_program_programs_scope_hidden").val();
            var arr = scope.split('|');

            $.each( arr, function( index, value ) {
                $('#scopetags').append('<span class="badge badge-pill badge-success m-r-xs">'+value+'</span>');
            });

            // update hidden field for tags
            var tags = $("#add_program_programs_tags").val();
            var arr = tags.split('|');
            $.each( arr, function( index, value ) {
                $('#tagstags').append('<span class="badge badge-pill badge-success m-r-xs">'+value+'</span>');
            });
            
            // autocomplete for Scope and Tags
            var urlScopes = "{{ path('retrieve-data', {param: 'scope'})|escape('js') }}";
            var urlTags = "{{ path('retrieve-data', {param: 'tags' })|escape('js') }}";

            $('#add_program_programs_scope').autocomplete({
                source: urlScopes,
                minLength: 0
            }).focus(function(){            
                $(this).data("uiAutocomplete").search($(this).val());
            });

            $('#add_program_programs_scope').autocomplete("option","appendTo",".eventForm");

            $('#add_program_programs_tags').autocomplete({
                source: urlTags,
                minLength: 0
            }).focus(function(){            
                $(this).data("uiAutocomplete").search($(this).val());
            });

            $('#add_program_programs_tags').autocomplete("option","appendTo",".eventForm");

            // update hidden field for scope
            var scope = $("#update_program_programs_scope_hidden").val();
            var arr = scope.split('|');

            $.each( arr, function( index, value ) {
                $('#scopetagsupdate').append('<span class="badge badge-pill badge-success m-r-xs">'+value+'</span>');
            });

            // update hidden field for tags
            var tags = $("#update_program_programs_tags").val();
            var arr = tags.split('|');
            $.each( arr, function( index, value ) {
                $('#tagstagsupdate').append('<span class="badge badge-pill badge-success m-r-xs">'+value+'</span>');
            });
            
            // autocomplete for Scope and Tags
            var urlScopes = "{{ path('retrieve-data', {param: 'scope'})|escape('js') }}";
            var urlTags = "{{ path('retrieve-data', {param: 'tags' })|escape('js') }}";

            $('#update_program_programs_scope').autocomplete({
                source: urlScopes,
                minLength: 0
            }).focus(function(){            
                $(this).data("uiAutocomplete").search($(this).val());
            });

            $('#update_program_programs_scope').autocomplete("option","appendTo",".eventForm");

            $('#update_program_programs_tags').autocomplete({
                source: urlTags,
                minLength: 0
            }).focus(function(){            
                $(this).data("uiAutocomplete").search($(this).val());
            });

            $('#update_program_programs_tags').autocomplete("option","appendTo",".eventForm");

            // captcha
            {% if captcha %}
                grecaptcha.ready(function() {
                    grecaptcha.execute('{{ publicKey }}', {action: 'homepage'}).then(function(token) {
                        document.getElementById('g-recaptcha-response').value = token;
                        document.getElementById('g-recaptcha-response-2').value = token;
                        document.getElementById('g-recaptcha-response-3').value = token;
                    });
                });
            {% endif %}

            // datepicker
            $('[data-toggle="datepicker"]').datepicker({
                format: 'dd-mm-yyyy'
            });
        });

        // escape HTML
        function escapeHtml(text) {
            var map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            
            return text.replace(/[&<>"']/g, function(m) { return map[m]; });
        }

        // add button for scope
        $('#addbutton').click(function(){
            var scope = escapeHtml($('#add_program_programs_scope').val());
            if(scope.trim() != ""){
                $('#add_program_programs_scope_hidden').val($('#add_program_programs_scope_hidden').val()+scope+"|");
                $('#scopetags').append('<span class="badge badge-pill badge-success m-r-xs">'+scope+'</span>');
                $('#add_program_programs_scope').val("");
            }
        });

        // add button for tags
        $('#addbuttontags').click(function(){
            var tag = escapeHtml($('#add_program_programs_tags').val());
            if(tag.trim() != ""){
                $('#add_program_programs_tags_hidden').val($('#add_program_programs_tags_hidden').val()+tag+"|");
                $('#tagstags').append('<span class="badge badge-pill badge-success m-r-xs">'+tag+'</span>');
                $('#add_program_programs_tags').val("");
            }
        });

        // add button for scope
        $('#addbuttonupdate').click(function(){
            var scope = escapeHtml($('#update_program_programs_scope').val());
            if(scope.trim() != ""){
                $('#update_program_programs_scope_hidden').val($('#update_program_programs_scope_hidden').val()+scope+"|");
                $('#scopetagsupdate').append('<span class="badge badge-pill badge-success m-r-xs">'+scope+'</span>');
                $('#update_program_programs_scope').val("");
            }
        });

        // add button for tags
        $('#addbuttontagsupdate').click(function(){
            var tag = escapeHtml($('#update_program_programs_tags').val());
            if(tag.trim() != ""){
                $('#update_program_programs_tags_hidden').val($('#update_program_programs_tags_hidden').val()+tag+"|");
                $('#tagstagsupdate').append('<span class="badge badge-pill badge-success m-r-xs">'+tag+'</span>');
                $('#update_program_programs_tags').val("");
            }
        });
    </script>
{% endblock %}
